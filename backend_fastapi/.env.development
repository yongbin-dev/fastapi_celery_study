# 개발 환경 설정
ENVIRONMENT=development

# Database 설정
# 로컬 Docker PostgreSQL 사용시:
DATABASE_URL=postgresql+asyncpg://sa:1@localhost:15432/postgres
# 외부 PostgreSQL 사용시 위 URL을 실제 DB URL로 변경하세요

# DB 쿼리 로깅 (개발시에만 true)
DB_ECHO=true

# FastAPI 설정
APP_HOST=127.0.0.1
APP_PORT=8000

# Redis/Celery 설정
REDIS_URL=redis://localhost:6379/0

# 로깅 설정
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_BODY_LOGGING=false
