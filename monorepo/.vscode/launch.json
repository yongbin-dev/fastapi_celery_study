{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "üåê FastAPI Dev Server (api_server)",
        "type": "debugpy",
        "request": "launch",
        "module": "uvicorn",
        "args": [
          "app.main:app",
          "--reload",
          "--host",
          "0.0.0.0",
          "--port",
          "8000"
        ],
        "justMyCode": false,
        "envFile": "${workspaceFolder}/.env.development",
        "env": {
          "ENVIRONMENT": "development"
        },
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}/packages/api_server",
        "python": "${workspaceFolder}/packages/api_server/.venv/bin/python"
      },
      {
        "name": "‚öôÔ∏è Celery Worker (celery_worker)",
        "type": "debugpy",
        "request": "launch",
        "module": "celery",
        "args": [
          "-A",
          "core.celery_app",
          "worker",
          "--loglevel=INFO",
          "--pool=solo"
        ],
        "jinja": true,
        "justMyCode": false,
        "envFile": "${workspaceFolder}/.env.development",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}/packages/celery_worker",
        "python": "${workspaceFolder}/packages/celery_worker/.venv/bin/python"
      },
      {
        "name": "üå∏ Celery Flower (celery_worker)",
        "type": "debugpy",
        "request": "launch",
        "module": "celery",
        "args": [
          "-A",
          "core.celery_app",
          "flower",
          "--port=5555"
        ],
        "jinja": true,
        "justMyCode": false,
        "envFile": "${workspaceFolder}/.env.development",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}/packages/celery_worker",
        "python": "${workspaceFolder}/packages/celery_worker/.venv/bin/python"
      },
      {
        "name": "ü§ñ ML Server (ml_server)",
        "type": "debugpy",
        "request": "launch",
        "module": "uvicorn",
        "args": [
          "app.main:app",
          "--reload",
          "--host",
          "0.0.0.0",
          "--port",
          "5050"
        ],
        "justMyCode": false,
        "envFile": "${workspaceFolder}/.env.development",
        "env": {
          "ENVIRONMENT": "development",
          "OCR_ENGINE": "mock"
        },
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}/packages/ml_server",
        "python": "${workspaceFolder}/packages/ml_server/.venv/bin/python"
      }
    ],
    "compounds": [
      {
        "name": "üöÄ Full Stack (API + Worker + ML)",
        "configurations": [
          "üåê FastAPI Dev Server (api_server)",
          "‚öôÔ∏è Celery Worker (celery_worker)",
          "ü§ñ ML Server (ml_server)"
        ],
        "stopAll": true
      },
      {
        "name": "üîß API + Worker",
        "configurations": [
          "üåê FastAPI Dev Server (api_server)",
          "‚öôÔ∏è Celery Worker (celery_worker)"
        ],
        "stopAll": true
      }
    ]
}