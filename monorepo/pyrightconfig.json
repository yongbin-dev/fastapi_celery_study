{
  "include": [
    "packages"
  ],
  "exclude": [
    "**/__pycache__",
    "**/.venv",
    "**/node_modules"
  ],
  "venvPath": ".",
  "venv": ".venv",
  "executionEnvironments": [
    {
      "root": "packages/api_server",
      "pythonVersion": "3.12",
      "pythonPlatform": "Linux",
      "extraPaths": [
        "packages/shared"
      ]
    },
    {
      "root": "packages/celery_worker",
      "pythonVersion": "3.12",
      "pythonPlatform": "Linux",
      "extraPaths": [
        "packages/shared"
      ]
    },
    {
      "root": "packages/ml_server",
      "pythonVersion": "3.12",
      "pythonPlatform": "Linux",
      "extraPaths": [
        "packages/shared"
      ]
    },
    {
      "root": "packages/shared",
      "pythonVersion": "3.12",
      "pythonPlatform": "Linux"
    }
  ],
  "reportMissingImports": "error",
  "reportMissingTypeStubs": false,
  "typeCheckingMode": "basic",
  "useLibraryCodeForTypes": true
}
